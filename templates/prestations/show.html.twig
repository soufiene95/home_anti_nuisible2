{% block body %}

<div class="col-md-8 mx-auto border border-solid border-primary rounded shadow">
            <h1 class="text-center">Préstation</h1>        
            
    
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ prestation.id }}</td>
            </tr>
            <tr>
                <th>Prestation</th>
                <td>{{ prestation.prestation }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ prestation.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
