{% extends 'base.html.twig' %}


{% block body %}
            {# Cards #}
    <nav class="row justify-content-around mx-0 m-5">
        {% for prestation in prestations %}
            <div class="card shadow border border-primary m-3 col-xl-3 col-lg-3 col-md-3 col-sm-2 rounded" style="width: 18rem;">
                <img src="{{asset("/image/prestation/" ~ prestation.image )}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{ prestation.prestation }}</h5>
                    <p class="card-text">
                        {% if prestation.description|length > 70 %}
                            {{ prestation.description|slice(0,70) }}...
                        {% else %}
                            {{ prestation.description }}
                        {% endif %}
                    </p>
                    <p class="fst-italic text-end">à partir de {{prestation.montant}} €</p>
                    <button onclick="{{prestation.id}}" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal{{prestation.id}}">
                        Choisir
                    </button>
                </div>
            </div>

            {# Modale #}
            <div class="modal fade" id="exampleModal{{prestation.id}}" data-bs-backdrop="static" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-scrollable">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5">{{prestation.prestation}}</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            {{prestation.description}}
                        </div>
                        <div class="modal-footer">
                        <a href="{{path('app_contact_index')}}">
                            <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Contactez-nous</button>
                        </a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </nav>
{% endblock %}

